# App
NODE_ENV=development
APP_URL=http://localhost:3000
DEFAULT_TENANT_ID=t_default
AUTH_ENABLED=false
ADMIN_API_TOKEN=change-me-admin-token
EDITOR_API_TOKEN=change-me-editor-token
ALERT_WEBHOOK_URL=

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/you7li
STORAGE_DRIVER=auto
MIGRATIONS_DIR=./db/migrations

# Queue
REDIS_URL=redis://localhost:6379
QUEUE_DRIVER=auto
REDIS_QUEUE_KEY=you7li:publish:jobs
REDIS_DLQ_KEY=you7li:publish:dlq
WORKER_POLL_MS=1000
JOB_MAX_ATTEMPTS=3
JOB_IDEMPOTENCY_TTL_HOURS=48
AUTOSCALE_MIN_WORKERS=1
AUTOSCALE_MAX_WORKERS=20
AUTOSCALE_JOBS_PER_WORKER=5

# Local persistence
DATA_DIR=./data
RETENTION_DAYS=90

# SLO
SLO_ERROR_RATE_MAX=0.01
SLO_HTTP_P95_MS_MAX=400
DB_SLOW_QUERY_MS=250

# Cache
CACHE_OPPORTUNITY_TTL_MS=60000
CACHE_ANALYTICS_TTL_MS=45000

# Optional external APIs
OPENAI_API_KEY=
YOUTUBE_API_KEY=
YOUTUBE_ACCESS_TOKEN=
YOUTUBE_PUBLISH_MODE=mock
YOUTUBE_PRIVACY_STATUS=unlisted
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REFRESH_TOKEN=
VIDEO_ASSET_DIR=./data/assets

# SSO (test mode)
SSO_ENABLED=false
SSO_OIDC_TEST_TOKEN=
SSO_SAML_TEST_TOKEN=
